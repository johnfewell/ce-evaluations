  <style type="text/css">

    body > .grid {
      height: 100%;
    }
    .image {
      margin-top: -100px;
    }
    .column {
      max-width: 450px;
    }
  </style>
<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui teal image header">
    <%= image_tag("ce-cert-logo.png", :class => "image")%> 
      <div class="content">
        Login to your account
      </div>
    </h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "ui large form"}) do |f| %>
      <div class="ui stacked segment">
        <div class="field">
          <div class="ui left icon input">
            <i class="user icon"></i>
            <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
          </div>
        </div>
        <div class="field">
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <%= f.password_field :password, autocomplete: "off", placeholder: "Password"  %>
          </div>
        </div>
        <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
    <% end -%>
        <%= f.submit "Log in", :class => "ui fluid large teal submit button" %>
        <% end %>
      </div>

     
    <div class="ui message">
      New to us? <%= link_to new_user_registration_path do %> Register <% end %>
    </div>
  </div>
</div>
